<h2>New Product</h2>
<%= simple_form_for [:admin, @product] do |f| %>
  <div class="group">
    <%= f.input :title, placeholder: 'rose' %>
  </div>
  <div class="group">
    <%= f.input :description %>
  </div>
  <div class="group">
    <%= f.input :quantity, as: :integer %>
  </div>
  <div class="group">
    <%= f.input :price, as: :integer %>
  </div>
  <%= f.submit "Submit", data: {disable_with: "Submitting..."}%>
<% end %>
